{
    "name": "luk-z/api-proxy-php",
    "description": "API Proxy written in PHP using Lumen framework",
    "type": "library",
    "license": "MIT",
    "keywords": ["api", "proxy", "lumen", "php", "api-gateway", "middleware"],
    "authors": [
        {
            "name": "Luca Ziliani",
            "email": "lucagcc@gmail.com"
        }
    ],
    "homepage": "https://github.com/lukzed/api-proxy-php",
    "readme": "README.md",
    "require": {
        "php": "^7.3|^8.0",
        "laravel/lumen-framework": "^8.0",
        "luk-z/php-api-token-auth": "^0.1.18"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "squizlabs/php_codesniffer": "^4.0",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "format": "php-cs-fixer fix",
        "format:check": "php-cs-fixer fix --dry-run --diff",
        "test": "phpunit"
    }
}
